<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:clickToClose="true"
    app:drag_edge="right"
    app:leftEdgeSwipeOffset="0dp"
    app:rightEdgeSwipeOffset="0dp">

    <!-- Bottom View Start-->
    <include
        android:id="@+id/bottom_wrapper"
        layout="@layout/timeline_view_list_item_underlayer" />

    <!-- Bottom View End-->

    <RelativeLayout
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:itemBackground"
        android:orientation="vertical"
        android:paddingBottom="@dimen/gap_16"
        android:paddingLeft="@dimen/gap_16"
        android:paddingRight="@dimen/gap_16"
        android:paddingTop="@dimen/gap_8">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerCrop"
                tools:src="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/screenName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/gap_8"
                android:minWidth="56dp"
                android:ellipsize="end"
                android:textColor="?android:textColorPrimary"
                android:textSize="@dimen/text_16"
                android:textStyle="bold"
                tools:background="?android:textColorHint" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <TextView
                android:id="@+id/createdAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="36dp"
                android:textColor="?android:textColorHint"
                android:textSize="@dimen/text_12"
                tools:background="?android:textColorHint" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:layout_marginTop="@dimen/gap_8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lineSpacingExtra="3dp"
                android:minHeight="56dp"
                android:textColor="?android:textColorPrimary"
                android:textSize="@dimen/text_14"
                tools:background="?android:textColorHint"
                tools:text="Clemens cob mixed with basil leafs.Extums resistere!Going to the heavens of man doesnâ€™t realize tantra anymore than praising creates powerful affirmation.A falsis, vita brevis barcas.Cum humani generis studere, omnes abnobaes perdere raptus, fidelis axonaes." />

            <com.sinyuk.fanfou.ui.SquareImageView
                android:id="@+id/image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/gap_8"
                android:layout_weight="0.382"
                android:contentDescription="@string/name_picture_thumb"
                android:scaleType="centerCrop"
                app:riv_border_width="0dp"
                app:riv_corner_radius="@dimen/picture_corner_radius_small" />
        </LinearLayout>

    </RelativeLayout>
</com.daimajia.swipe.SwipeLayout>