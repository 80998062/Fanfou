<com.sinyuk.fanfou.ui.DuoDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:tag="menu" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:tag="content">

        <FrameLayout
            android:id="@+id/tabViewContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_height"
            android:background="@color/colorPrimaryDark"
            android:elevation="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/homeTab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/label_home"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/publicTab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/label_search"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/notificationTab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/label_inbox"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/messageTab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/label_direct_msg"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>


</com.sinyuk.fanfou.ui.DuoDrawerLayout>