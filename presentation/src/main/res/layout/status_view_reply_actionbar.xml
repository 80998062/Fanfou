<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:colorPrimary"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/gap_8"
    android:paddingEnd="@dimen/gap_16"
    android:paddingStart="@dimen/gap_16"
    tools:layout_gravity="center_vertical">

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ProgressBar
        android:id="@+id/textCountProgress"
        style="@style/menu_button"
        android:layout_marginEnd="@dimen/gap_8"
        android:indeterminate="false"
        android:progress="0"
        android:progressBackgroundTint="@color/colorAccentLt"
        android:progressTint="@color/colorAccent" />

    <com.sinyuk.fanfou.ui.QMUIRoundButton
        android:id="@+id/replyCommitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="24dp"
        android:paddingEnd="@dimen/gap_12"
        android:paddingStart="@dimen/gap_12"
        android:text="@string/action_reply"
        android:textColor="?android:textColor"
        android:textSize="@dimen/text_12"
        app:qmui_backgroundColor="#3FADEC"
        app:qmui_borderWidth="0dp"
        app:qmui_isRadiusAdjustBounds="true"
        app:qmui_radius="12dp" />
</LinearLayout>