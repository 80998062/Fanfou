<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:clickToClose="true"
    app:drag_edge="right"
    app:leftEdgeSwipeOffset="0dp"
    app:rightEdgeSwipeOffset="0dp">

    <TextView
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/colorAccentLt"
        android:gravity="center"
        android:paddingEnd="@dimen/gap_16"
        android:paddingStart="@dimen/gap_16"
        android:text="@string/action_delete"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableEnd="@drawable/ic_left_top"
        android:drawablePadding="@dimen/gap_16"
        android:foreground="?android:selectableItemBackgroundBorderless"
        android:gravity="start"
        android:paddingBottom="@dimen/gap_8"
        android:paddingEnd="@dimen/gap_16"
        android:paddingStart="@dimen/gap_16"
        android:paddingTop="@dimen/gap_8"
        android:textColor="@color/textColorSecondary"
        tools:text="#圣诞假" />

</com.daimajia.swipe.SwipeLayout>


