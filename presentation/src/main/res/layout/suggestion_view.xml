<cn.dreamtobe.kpswitch.widget.KPSwitchRootLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    android:orientation="vertical">

    <Space
        android:layout_width="0dp"
        android:layout_height="@dimen/status_bar_height"
        tools:ignore="Suspicious0dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/colorPrimary"
        android:transitionName="@string/transition_toolbar">

        <ImageView
            style="@style/action_button"
            android:layout_toStartOf="@+id/editText"
            android:contentDescription="@null"
            android:transitionName="@string/transition_toolbar_button_1" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/gap_8"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="@dimen/gap_16"
            android:layout_marginTop="@dimen/gap_8"
            android:layout_toStartOf="@+id/navBack"
            android:background="@drawable/search_view_bg"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_search"
            android:focusableInTouchMode="false"
            android:hint="@string/hint_search"
            android:maxLines="1"
            android:paddingEnd="@dimen/gap_8"
            android:paddingStart="@dimen/gap_8"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="?android:textColorPrimary"
            android:textColorHint="?android:textColorHint"
            android:textIsSelectable="true"
            android:textSize="@dimen/text_14"
            android:transitionName="@string/transition_search_view" />

        <TextView
            android:id="@+id/navBack"
            style="@style/action_textbutton"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="@string/action_cancel"
            android:textColor="@color/colorAccent"
            android:transitionName="@string/transition_toolbar_button_2" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/historyViewContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_height="100dp" />

            <FrameLayout
                android:id="@+id/friendViewContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>
</cn.dreamtobe.kpswitch.widget.KPSwitchRootLinearLayout>



