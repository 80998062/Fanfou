<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/gap_8"
    android:paddingTop="@dimen/gap_8"
    tools:layout_gravity="center_vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/gap_16"
        android:text="@string/name_public_timeline"
        android:textColor="?android:textColorSecondary"
        android:textStyle="bold" />

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.sinyuk.fanfou.ui.BetterViewAnimator
        android:id="@+id/viewAnimator"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:inAnimation="@android:anim/slide_in_left"
        android:outAnimation="@android:anim/slide_out_right">

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/loadingLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:indicatorColor="@color/colorAccentLt"
            app:indicatorName="BallPulseIndicator"
            app:minWidth="24dp" />

        <TextView
            android:id="@+id/refreshLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingEnd="@dimen/gap_16"
            android:paddingStart="@dimen/gap_16"
            android:text="@string/action_switch_to_refresh"
            android:textColor="@color/colorAccentLt"
            android:textSize="@dimen/text_12" />

    </com.sinyuk.fanfou.ui.BetterViewAnimator>


</LinearLayout>