<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/status_bar_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_height"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/navBack"
                style="@style/action_button"
                android:contentDescription="@string/action_back"
                android:src="@drawable/ic_back" />


            <TextView
                style="@style/toolbarTitle.Linear"
                android:text="@string/label_status" />

            <ImageView
                android:id="@+id/menuButton"
                style="@style/action_button"
                android:contentDescription="@string/action_back"
                android:src="@drawable/ic_back" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_size"
            android:layout_gravity="bottom"
            android:background="@color/divider_color" />

    </FrameLayout>

    <com.sinyuk.fanfou.ui.BetterViewAnimator
        android:id="@+id/viewAnimator"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.sinyuk.fanfou.ui.NestedScrollCoordinatorLayout
            android:id="@+id/coordinator"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:elevation="0dp">

                <android.support.v7.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentInsetStart="0dp"
                    app:layout_scrollFlags="scroll">

                    <include layout="@layout/status_view_header" />

                </android.support.v7.widget.Toolbar>


            </android.support.design.widget.AppBarLayout>


            <FrameLayout
                android:id="@+id/contextTimelineContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        </com.sinyuk.fanfou.ui.NestedScrollCoordinatorLayout>

        <FrameLayout
            android:id="@+id/mentionLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.sinyuk.fanfou.ui.BetterViewAnimator>


    <include layout="@layout/status_view_footer" />


    <LinearLayout
        android:id="@+id/panelRootContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <include layout="@layout/status_view_reply_actionbar" />

        <cn.dreamtobe.kpswitch.widget.KPSwitchPanelLinearLayout
            android:id="@+id/panelRoot"
            android:layout_width="match_parent"
            android:layout_height="@dimen/keyboard_panel_height"
            android:orientation="vertical" />
    </LinearLayout>

</LinearLayout>
