<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/player_list_item_small_height"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/gap_16"
    android:paddingRight="@dimen/gap_16">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/name_avatar"
        android:scaleType="centerCrop"
        tools:src="@mipmap/ic_launcher_round" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/gap_16"
        android:layout_marginStart="@dimen/gap_8"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/screenName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/text_12"
            tools:text="@string/name_avatar" />


        <TextView
            android:id="@+id/userId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/text_12"
            tools:text="\@~Sinyuk" />

    </LinearLayout>
</LinearLayout>